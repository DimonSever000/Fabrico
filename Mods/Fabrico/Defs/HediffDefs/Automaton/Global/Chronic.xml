	<!---->
	<!---->
	<HediffDef ParentName="ChronicDiseaseBase">
		<defName>Defect</defName>
		<label>Defect</label>
		<description>Some of the components are out of order and cannot be restored. A complete body part replacement is required.</description>
		<initialSeverity>1.0</initialSeverity>
		<maxSeverity>1.0</maxSeverity>
		<tendable>false</tendable>
		<makesSickThought>false</makesSickThought>
		<isBad>false</isBad>
		<stages>
			<li>
				<label>easy</label>
				<partEfficiencyOffset>-0.1</partEfficiencyOffset>
			</li>
			<li>
				<label>medium</label>
				<minSeverity>0.3</minSeverity>
				<partEfficiencyOffset>-0.3</partEfficiencyOffset>
			</li>
			<li>
				<label>severe</label>
				<minSeverity>0.5</minSeverity>
				<partEfficiencyOffset>-0.5</partEfficiencyOffset>
			</li>
			<li>
				<label>critical</label>
				<minSeverity>0.8</minSeverity>
				<partEfficiencyOffset>-0.9</partEfficiencyOffset>
			</li>
		</stages>
	</HediffDef>
	<!---->
	<HediffDef ParentName="InfectionBase">
		<defName>AIDefect</defName>
		<label>AI defect</label>
		<description>The accumulation of failures in the program can lead to hostility and aggression, which will eventually lead to rebellion.</description>
		<hediffClass>SteamRim.Hediffs.AIDefect</hediffClass>
		<makesSickThought>true</makesSickThought>
		<initialSeverity>0.001</initialSeverity>
		<tendable>true</tendable>
		<comps>
			<li Class="HediffCompProperties_TendDuration">
				<baseTendDurationHours>24</baseTendDurationHours>
				<severityPerDayTended>-0.005</severityPerDayTended>
			</li>
			<li Class="HediffCompProperties_Immunizable">
				<!--<severityPerDayNotImmune>0.05</severityPerDayNotImmune>-->
				<severityPerDayNotImmune>10</severityPerDayNotImmune>
				<immunityPerDaySick>0.04</immunityPerDaySick>
				<severityPerDayImmune>-0.1</severityPerDayImmune>
				<immunityPerDayNotSick>-0.05</immunityPerDayNotSick>
			</li>
		</comps>
		<stages>
			<li>
				<label>easy</label>
			</li>
			<li>
				<label>medium</label>
				<minSeverity>0.3</minSeverity>
			</li>
			<li>
				<label>severe</label>
				<minSeverity>0.5</minSeverity>
			</li>
			<li>
				<label>critical</label>
				<minSeverity>0.8</minSeverity>
				<lifeThreatening>true</lifeThreatening>
			</li>
		</stages>
	</HediffDef>
	<!---->
</Defs>
