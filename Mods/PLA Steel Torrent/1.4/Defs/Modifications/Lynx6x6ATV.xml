<?xml version="1.0" encoding="UTF-8"?>
<Defs>
	<!-- 23mm autocannon-->
	<ThingDef ParentName="PLA_VehicleModWeaponBase">
		<defName>PLA_VehicleWeapon23mmAutocannon</defName>
		<label>Lynx6x6 modification kit - 23mm autocannon</label>
		<description>A modification toolkit that can be used to install the 23mm autocannon on vehicle.</description>
		<descriptionHyperlinks>
			<RecipeDef>PLA_InstallWeapon23mmAutocannon</RecipeDef>
			<ThingDef>PLA_Gun23mmAutocannon</ThingDef>
			<ThingDef>PLA_Lynx6x6UltraLight</ThingDef>
		</descriptionHyperlinks>
		<costList>
			<StrongPlates>50</StrongPlates>
			<ComponentIndustrial>6</ComponentIndustrial>
			<Mechanism>6</Mechanism>
		</costList>
		<statBases>
			<Mass>41</Mass>
		</statBases>
		<recipeMaker>
            <researchPrerequisites>
                <li>AdvancedMechanicalEngineering</li>
            </researchPrerequisites>
        </recipeMaker>
	</ThingDef>
	<RecipeDef ParentName="PLA_RecipeInstallVehicleWeapon">
		<defName>PLA_InstallWeapon23mmAutocannon</defName>
		<label>install 23mm autocannon</label>
		<description>Install the 23mm autocannon.</description>
		<descriptionHyperlinks>
			<ThingDef>PLA_VehicleWeapon23mmAutocannon</ThingDef>
			<ThingDef>PLA_Gun23mmAutocannon</ThingDef>
			<ThingDef>PLA_Lynx6x6UltraLight</ThingDef>
		</descriptionHyperlinks>
		<jobString>Installing 23mm autocannon</jobString>
		<recipeUsers>
			<li>PLA_Lynx6x6UltraLight</li>
		</recipeUsers>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>PLA_VehicleWeapon23mmAutocannon</li>
					</thingDefs>
				</filter>
				<count>1</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<thingDefs>
				<li>PLA_VehicleWeapon23mmAutocannon</li>
			</thingDefs>
		</fixedIngredientFilter>
		<appliedOnFixedBodyParts>
			<li>PLA_VehicleTurret</li>
		</appliedOnFixedBodyParts>
		<modExtensions>
			<li Class="PLA.Vehicle.RecipeModifyVehicleProps">
				<weaponToInstall>PLA_Gun23mmAutocannon</weaponToInstall>
			</li>
		</modExtensions>
	</RecipeDef>
