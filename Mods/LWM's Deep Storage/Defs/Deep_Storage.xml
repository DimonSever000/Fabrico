<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<!---->
	<ThingDef Name="LWM_DeepStorage" ParentName="FurnitureBase" Abstract="true">
		<thingClass>Building_Storage</thingClass>
		<altitudeLayer>Building</altitudeLayer>
		<passability>PassThroughOnly</passability>
		<canOverlapZones>false</canOverlapZones>
		<costStuffCount>30</costStuffCount>
		<surfaceType>Item</surfaceType>
		<fillPercent>0.4</fillPercent>
		<drawGUIOverlay>true</drawGUIOverlay>
		<statBases>
			<MaxHitPoints>100</MaxHitPoints>
			<Mass>30</Mass>
			<WorkToBuild>600</WorkToBuild>
			<Flammability>1.0</Flammability>
		</statBases>
		<size>(2,1)</size>
		<defaultPlacingRot>South</defaultPlacingRot>
		<pathCost>150</pathCost>
		<minifiedDef>MinifiedThing</minifiedDef>
		<inspectorTabs>
			<li>ITab_Storage</li>
			<li>LWM.DeepStorage.ITab_DeepStorage_Inventory</li>
		</inspectorTabs>
		<filthLeaving>Filth_RubbleBuilding</filthLeaving>
		<building>
			<preventDeteriorationOnTop>true</preventDeteriorationOnTop>
			<ignoreStoredThingsBeauty>true</ignoreStoredThingsBeauty>
			<defaultStorageSettings>
				<priority>Important</priority>
				<filter>
				</filter>
			</defaultStorageSettings>
		</building>
		<comps>
		</comps>
		<designationCategory>LWM_DS_Storage</designationCategory>
	</ThingDef>
	<!---->
	<ThingDef ParentName="LWM_DeepStorage">
		<defName>SmallCrate</defName>
		<label>Small crate</label>
		<description>Structure for compact storage of many items.</description>
		<graphicData>
			<texPath>Things/SmallCrate</texPath>
			<drawSize>(1.35,1.3)</drawSize>
			<graphicClass>Graphic_Random</graphicClass>
			<drawRotated>false</drawRotated>
		</graphicData>
		<statBases>
			<WorkToBuild>800</WorkToBuild>
			<Flammability>1.0</Flammability>
			<Beauty>0</Beauty>
			<Mass>10</Mass>
		</statBases>
		<size>1,1</size>
		<rotatable>true</rotatable>
		<staticSunShadowHeight>0.2</staticSunShadowHeight>
		<stuffCategories>
			<li>Woody</li>
		</stuffCategories>
		<costStuffCount>75</costStuffCount>
		<building>
			<preventDeteriorationOnTop>true</preventDeteriorationOnTop>
			<ignoreStoredThingsBeauty>true</ignoreStoredThingsBeauty>
			<fixedStorageSettings>
				<filter>
					<categories>
						<li>Root</li>
					</categories>
				</filter>
			</fixedStorageSettings>
		</building>
		<comps>
			<li Class="LWM.DeepStorage.Properties">
				<maxNumberStacks>4</maxNumberStacks>
				<minTimeStoringTakes>100</minTimeStoringTakes>
				<additionalTimeEachStack>10</additionalTimeEachStack>
				<additionalTimeEachDef>5</additionalTimeEachDef>
				<overlayType>SumOfAllItems</overlayType>
				<showContents>false</showContents>
			</li>
		</comps>
		<researchPrerequisites>
			<li>Storages</li>
		</researchPrerequisites>
	</ThingDef>
